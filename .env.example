# Конфигурация Easy Pass Bot
# Скопируйте этот файл в .env и заполните значения

# Токен бота Telegram (обязательно)
BOT_TOKEN=your_telegram_bot_token_here

# Путь к базе данных (по умолчанию: database/easy_pass.db)
DATABASE_PATH=database/easy_pass.db

# Ключ шифрования для секретов (сгенерируйте случайную строку)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Настройки логирования
LOG_LEVEL=INFO
LOG_DIR=logs

# Настройки безопасности
RATE_LIMIT_MAX_REQUESTS=15
RATE_LIMIT_WINDOW_SECONDS=60

# Настройки базы данных
DB_CONNECTION_TIMEOUT=30
DB_QUERY_TIMEOUT=10

# Настройки мониторинга
HEALTH_CHECK_INTERVAL=300
ALERT_EMAIL=admin@example.com

# Настройки архивации
ARCHIVE_INTERVAL_HOURS=6
ARCHIVE_USED_PASSES_HOURS=24
ARCHIVE_UNUSED_PASSES_DAYS=7

# Настройки уведомлений
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_TIMEOUT=30

# Настройки кэширования
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000

# Настройки производительности
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

